<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Jakarta-Bean-Validation-TCK Methods" verbose="1">
    <test name="Jakarta-Bean-Validation-TCK Methods">

        <classes>

            <class name="org.hibernate.beanvalidation.tck.tests.methodvalidation.MethodValidationTest">
                <methods>
                    <!-- Constructors do not generate executable methods -->
                    <exclude name="constructor.*"/>

                    <exclude name="methodParameterValidationIsAppliedGroupWise"/>
                    <exclude name="methodReturnValueValidationIsAppliedGroupWise"/>
                    <exclude name="methodReturnValueValidationTargetsReturnValueAndCascadedConstraints"/>
                </methods>
            </class>

        </classes>

    </test>
</suite>
